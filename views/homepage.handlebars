<!-- Loop over each object in the projects array -->
 <div class="row">
{{#each renderCrystals as |crystal| }}
          <div class="card mb-3 col-sm-5">
            <h3 class="text-danger card-header">{{category_id}}</h3>
            <a class="card-title text-center" href="/crystal/{{crystal.id}}"><h2>{{crystal.name}}</h2></a>
            <img class="card-img-top " src="" alt="Card image cap">
            <div class="card-body bg-light mb-3">
              <p class="card-text"> About this crystal: {{crystal.description}}</p>
              <p class="card-text"><small class="text-muted">Posted by {{crystal.user.name}} on</small></p>
              <p class="card-text"> Price:{{crystal.price}}</p>
               <h4 class="text-danger text-left"> Hardness:{{hardness}}</h2>
            </div>
              <h3 class="text-danger text-right"> Very Rare</h3>
          </div>
{{/each}}
 </div>