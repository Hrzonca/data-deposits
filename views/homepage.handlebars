<!-- Loop over each object in the projects array -->
 <div class="row justify-content-center">
{{#each renderCrystals as |crystal| }}
          <div class="card mb-3 col-md-6 mp-3 ">
            <a class="card-header text-center" href="/crystal/{{crystal.id}}"><h2>{{crystal.name}}</h2></a>
            <h3 class="card-title">Description:</h3>
            {{!-- <img class="card-img-top " src="" alt="Card image cap"> --}}
            <div class="card-body bg-light mb-3">
              <p class="card-text">{{crystal.description}}</p>
              <p class="card-text"><small class="text-muted">Posted by: {{crystal.user.name}} on {{formatDate crystal.date_created}}</small></p>
              <p class="card-text"> Rarity: {{crystal.category.category_name}}</p>
              <p class="card-text"> Price: ${{crystal.price}}</p>
              <p class="card-text"> Hardness: {{hardness}}</p>
            </div>
          </div>
{{/each}}
 </div>

